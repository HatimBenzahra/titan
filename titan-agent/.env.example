# Node Environment
NODE_ENV=development

# Database
DATABASE_URL=postgresql://titan:password@localhost:5432/titan_agent

# Redis
REDIS_URL=redis://localhost:6379

# LLM API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# API Server
PORT=3000
API_SECRET_KEY=your-random-secret-key-here

# Docker
DOCKER_HOST=unix:///var/run/docker.sock

# Timeouts (milliseconds)
LLM_TIMEOUT=300000
TERMINAL_TIMEOUT=600000
WEB_TIMEOUT=30000

# Agent Configuration
MAX_RETRIES=10
MAX_STEPS_PER_TASK=50

# Sandbox Limits
SANDBOX_CPU_LIMIT=2.0
SANDBOX_MEMORY_LIMIT=2g
SANDBOX_DISK_LIMIT=10g
SANDBOX_TIMEOUT=3600000

# Monitoring (Optional)
PROMETHEUS_PORT=9090
OPENTELEMETRY_ENDPOINT=http://localhost:4318
