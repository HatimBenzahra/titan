# Titan Agent Sandbox Container
FROM ubuntu:22.04

# Prevent interactive prompts during installation
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies first
RUN apt-get update && apt-get install -y \
    ca-certificates \
    gnupg \
    curl \
    wget \
    git \
    build-essential \
    python3 \
    python3-pip \
    chromium-browser \
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libdbus-1-3 \
    libxkbcommon0 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libpango-1.0-0 \
    libcairo2 \
    libasound2 \
    libatspi2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 18.x (required for Playwright)
RUN curl -fsSL https://deb.nodesource.com/setup_18.x | bash - && \
    apt-get install -y nodejs && \
    rm -rf /var/lib/apt/lists/*

# Set Playwright to use system chromium
ENV PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=1
ENV PLAYWRIGHT_CHROMIUM_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Create non-root user for agent execution
RUN useradd -m -s /bin/bash agent

# Create working directory with full permissions for agent user
RUN mkdir -p /work && chown -R agent:agent /work && chmod 755 /work

# Create app directory for servers
RUN mkdir -p /app/servers && chown agent:agent /app/servers

# Copy server files
COPY --chown=agent:agent sandbox-servers/shell-server.js /app/servers/
COPY --chown=agent:agent sandbox-servers/file-server.js /app/servers/
COPY --chown=agent:agent sandbox-servers/browser-server.js /app/servers/
COPY --chown=agent:agent sandbox-servers/package.json /app/servers/

# Install Node.js dependencies for servers
WORKDIR /app/servers
RUN npm install

# Switch to non-root user
USER agent

# Set working directory for agent operations
WORKDIR /work

# Expose ports for services
# 3001: Shell server
# 3002: Browser server
# 3003: File server
EXPOSE 3001 3002 3003

# Start shell and file servers (browser server disabled until Playwright binaries are fixed)
CMD ["sh", "-c", "node /app/servers/shell-server.js & node /app/servers/file-server.js & wait"]
